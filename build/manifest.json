{
    "manifest_version": 2,

    "name": "Count",
    "description":
        "Counts characters in selection of focused input field",
    "version": "1.2.3",

    "browser_action": {
        "default_icon": "images/icon32.png",
		"default_title": "Select text to count the number of characters"
	},

    "background": {
        "scripts": ["background.js"],
        "persistent": false
	},

	"content_scripts": [
		{
		"matches": ["<all_urls>"],
		"js": ["content-script.js"],
		"css": ["content-script.css"],
		"run_at": "document_idle"
	}],

    "icons": {
        "16": "images/icon16.png",
		"32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },

	"permissions": [
		"storage", "activeTab", "tabs"
	]
	,"web_accessible_resources": ["images/*.png", "images/*.svg"]
	
}
